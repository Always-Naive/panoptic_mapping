<launch>
<!-- ============ Arguments ============ -->
  <!-- General -->
  <arg name="namespace" default="data"/> 
  <arg name="use_rio" default="true"/>
  <arg name="use_detectron" default="true"/>
  <arg name="visualize" default="true"/> 
  
  <!-- Flat Dataset args -->
  <arg name="base_path" default="/home/lukas/Documents/Datasets/flat_dataset/run1"/> 
  <arg name="play_rate" default="3"/>  <!-- Realtime factor -->
  <arg name="wait_time" default="0"/>  <!-- s -->
  <arg name="max_frames" default="10000"/>
  
  <!-- Rio Dataset args -->
  <arg name="data_path" default="/home/lukas/Documents/Datasets/3RScan"/> 
  <arg name="scene_id" default="2"/> <!-- 0: 0-3, 1: 0-3, 2: 0-1 -->
  <arg name="scan_id" default="1"/>
  <arg name="rio_play_rate" default="20"/>  <!-- Hz -->
    
  <!-- Mapper -->
  <arg name="config" default="rio_detectron"/> <!-- devel, detectron, rio, gt_seg, single_tsdf -->
  <arg name="shutdown_when_finished" default="false"/> 
  
  <!-- Save/Load maps -->
  <arg name="load_map" default = "true"/>
  <arg name="load_file" default = "/home/lukas/Documents/PanopticMapping/Data/maps/timing/rio_2.panmap"/>
  <arg name="save_file" default = "/home/lukas/Documents/PanopticMapping/Data/maps/new_map"/>



<!-- ============ Run ============ -->
  
  <!-- Play data -->
  <arg name="wait" default = "true" if="$(arg load_map)"/>
  <include file="$(find panoptic_mapping_utils)/launch/play_flat_dataset.launch" pass_all_args="true" unless="$(arg use_rio)" />
  <include file="$(find panoptic_mapping_utils)/launch/play_rio_dataset.launch" pass_all_args="true" if="$(arg use_rio)" />  
  
  <!-- Mapper -->
  <node name="panoptic_mapper" pkg="panoptic_mapping_ros" type="panoptic_mapper_node" output="screen" ><!--required="true"-->
    <!-- Config -->
    <rosparam file="$(find panoptic_mapping_ros)/config/mapper/$(arg config).yaml"/>
    <param name="save_map_path_when_finished" value="$(arg save_file)" />  
    <param name="shutdown_when_finished" value="$(arg shutdown_when_finished)" /> 
     
    <!-- Input -->
    <remap from="color_image_in" to="$(arg namespace)/color_image"/>
    <remap from="depth_image_in" to="$(arg namespace)/depth_image"/>
    <remap from="segmentation_image_in" to="$(arg namespace)/segmentation_image"/>
    <remap from="labels_in" to="$(arg namespace)/segmentation_labels"/>
  </node>  
  
  <!-- Map loader -->
  <node name="map_loader" pkg="panoptic_mapping_utils" type="map_loader.py" if="$(arg load_map)" output="screen">
     <param name="path" value="$(arg load_file)" /> 
     <param name="srv_name" value="/panoptic_mapper/load_map" /> 
     <param name="delay" value="0.1" /> 
  </node>  

  <!-- Path visualization -->
  <node name="path_visualizer" pkg="panoptic_mapping_utils" type="path_visualizer.py" output="screen">
    <remap from="~pose_in" to="$(arg namespace)/pose" />
    <param name="use_arrow" value="false" /> 
    <param name="length" value="0.5" />
  </node>
  
  <!-- RVIZ Visualization-->
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find panoptic_mapping_ros)/config/rviz/devel.rviz" output="screen" if="$(arg visualize)"/>

</launch>
